{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "sql:allow-load",
        "sql:allow-execute",
        "sql:default",
        "sql:allow-select",
        "log:allow-log",
        "log:default",
        "core:path:default",
        "core:event:default",
        "core:window:default",
        "core:app:default",
        "core:image:default",
        "core:resources:default",
        "core:menu:default",
        "core:tray:default"
    ]
}